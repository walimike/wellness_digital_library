<p class="text-success"><%= notice %></p>

<div class="container py-4">
  <div class="card mb-4">
    <div class="card-body">
      <div class="row">
        <div class="col-md-4 text-center">
          <% if @author.avatar.attached? %>
            <img 
              src="<%= url_for(@author.avatar) %>" 
              alt="<%= @author.name %>'s Avatar" 
              class="img-fluid rounded-circle shadow" 
              style="max-width: 150px;">
          <% else %>
            <p class="text-muted"><em>No avatar available</em></p>
          <% end %>
        </div>
        <div class="col-md-8">
          <h2><%= @author.name %></h2>
          <p class="text-muted"><strong>Bio:</strong></p>
          <p><%= @author.bio %></p>
          <div class="mt-3 d-flex">
            <%= link_to "Edit Author", edit_author_path(@author), class: "btn btn-outline-secondary btn-sm me-2" %>
            <%= button_to "Delete Author", @author, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure you want to delete this author?" } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-between mt-3">
    <%= link_to "Back to Authors", authors_path, class: "btn btn-secondary" %>
    <%= link_to "New Author", new_author_path, class: "btn btn-success" %>
  </div>
</div>
