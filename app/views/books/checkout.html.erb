<div class="container mt-5">
  <h2>Checkout</h2>
  <p><strong>Title:</strong> <%= @book.title %></p>
  <p><strong>Author:</strong> <%= @book.author&.name || 'Unknown' %></p>
  <p><strong>Price:</strong> <%= number_to_currency(@book.price / 100.0) %></p>

  <%= form_with url: confirm_payment_book_path(@book), method: :post do %>
    <%= submit_tag "Confirm Payment", class: "btn btn-success" %>
    <%= link_to "Cancel", books_path, class: "btn btn-secondary ms-2" %>
  <% end %>
</div>
