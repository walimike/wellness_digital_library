<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<div id="books">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Genre</th>
        <th>Rating</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <%= render book %>
      <% end %>
    </tbody>
  </table>
</div>

<div class="mt-3">
  <%= link_to "New Book", new_book_path, class: "btn btn-success" %>
</div>
