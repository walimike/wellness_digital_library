<p class="text-success"><%= notice %></p>

<div class="container mt-4">
  <!-- Dashboard Stats -->
  
  <div class="d-flex text-center mb-4">
    <a href="<%= authors_path %>">
      <div>
        <div class="card shadow-sm p-3">
          <p>Book Authors</p>
          <span class="text-success"><%= @authors_count %></span>
        </div>
      </div>
    </a>
    <div>
      <div class="card shadow-sm p-3">
        <p>Books</p>
        <span class="text-warning"><%= @books_count %></span>
      </div>
    </div>
    <a href="<%= categories_path %>">
    <div>
      <div class="card shadow-sm p-3">
        <p>Categories</p>
        <span class="text-primary"><%= @categories_count %></</span>
      </div>
    </div>
    </a>
  </div>

  <div class="row">
    <!-- Main Book Grid -->
    <div class="col-md-9">
      <h2 class="mb-3">Popular Books</h2>
      <div class="row">
        <% @books.each do |book| %>
          <% if book.cover_image.attached? %>
            <div class="col-md-4 mb-4">
              <div class="card h-100 shadow-sm book-card">
                <div class="card-img-container">
                  <% if book.cover_image.attached? %>
                    <%= image_tag book.cover_image, class: "card-img-top", alt: "#{book.title} Cover" %>
                  <% else %>
                    <img src="https://via.placeholder.com/300x200?text=No+Cover" class="card-img-top" alt="No cover available">
                  <% end %>
                </div>
                <div class="card-body d-flex flex-column justify-content-between">
                  <div>
                    <h5 class="card-title"><%= book.title %></h5>
                    <p class="card-text text-muted"><%= book.author&.name || "Unknown Author" %></p>
                  </div>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                  <%= link_to "View", book_path(book), class: "btn btn-outline-primary btn-sm" %>
                  <span class="badge bg-info text-dark"><%= book.genre %></span>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="col-md-3">
      <div class="m-5">
        <%= link_to "Add New Book", new_book_path, class: "btn btn-success" %>
      </div>
      <div class="mb-4">
        <div class="card p-3 text-center">
          <h6>Subscribe to Our Blog</h6>
          <%= button_to "Subscribe", "#", class: "btn btn-outline-success btn-sm mt-2" %>
        </div>
      </div>

      <div class="mb-4">
        <div class="card text-center bg-info text-white p-3">
          <p class="mb-1">Join a community of over</p>
          <h5>5000 Book Lovers</h5>
          <%= link_to "Join Now", "#", class: "btn btn-light btn-sm mt-2" %>
        </div>
      </div>

      <div class="card p-3">
        <h6>Book Authors</h6>
        <hr>
        <ul class="list-unstyled">
          <li class="mb-2">
            <strong>Reinaldo Costa</strong><br>
            <small>Sukabumi, Indonesia</small>
          </li>
          <li class="mb-2">
            <strong>Ahmad Gurona</strong><br>
            <small>Bandung, Indonesia</small>
          </li>
          <li>
            <strong>Michele Angelina</strong><br>
            <small>Jakarta, Indonesia</small>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
<style>
.book-card {
  height: 420px;
  display: flex;
  flex-direction: column;
}

.card-img-container {
  height: 180px;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

.card-img-container img {
  height: 100%;
  width: auto;
  object-fit: cover;
}
</style>
