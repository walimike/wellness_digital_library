<%= form_with(model: book, class: "needs-validation") do |form| %>
  <% if book.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h4>
      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :author, class: "form-label" %>
    <%= form.collection_select :author_id, Author.all, :id, :name, { prompt: "Select an author" }, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :category, class: "form-label" %>
    <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: "Select a category" }, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :genre, class: "form-label" %>
    <%= form.text_field :genre, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :synopsis, class: "form-label" %>
    <%= form.text_area :synopsis, class: "form-control", rows: 5 %>
  </div>

  <div class="mb-3">
    <%= form.label :rating, class: "form-label" %>
    <%= form.number_field :rating, step: 0.1, min: 0, max: 5, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :cover_image, class: "form-label" %>
    <%= form.file_field :cover_image, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :file_path, class: "form-label" %>
    <%= form.file_field :file_path, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :availability_status, class: "form-label" %>
    <%= form.number_field :availability_status, min: 0, class: "form-control" %>
  </div>

  <div class="text-center">
    <%= form.submit "Save Book", class: "btn btn-primary" %>
  </div>
<% end %>
