<div class="container mt-5">
  <h1 class="mb-4">Welcome, <%= current_user.name %></h1>

  <div class="row">
    <!-- Authors Card -->
    <div class="col-md-4">
      <div class="card text-center shadow">
        <div class="card-body">
          <h5 class="card-title">Authors</h5>
          <p class="display-4 text-primary"><%= @authors_count %></p>
          <a href="<%= authors_path %>" class="btn btn-primary">View Authors</a>
        </div>
      </div>
    </div>

    <!-- Books Card -->
    <div class="col-md-4">
      <div class="card text-center shadow">
        <div class="card-body">
          <h5 class="card-title">Books</h5>
          <p class="display-4 text-success"><%= @books_count %></p>
          <a href="<%= books_path %>" class="btn btn-success">View Books</a>
        </div>
      </div>
    </div>

    <!-- Categories Card -->
    <div class="col-md-4">
      <div class="card text-center shadow">
        <div class="card-body">
          <h5 class="card-title">Categories</h5>
          <p class="display-4 text-warning"><%= @categories_count %></p>
          <a href="<%= categories_path %>" class="btn btn-warning">View Categories</a>
        </div>
      </div>
    </div>
  </div>
</div>
